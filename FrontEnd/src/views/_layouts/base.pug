	const startWorkingDate = new Date(2020, 6); // July is represented by month index 6 (0-indexed)
	const currentWorkingDate = new Date();
	let yearsOfExperience = currentWorkingDate.getFullYear() - startWorkingDate.getFullYear();
	if (currentWorkingDate.getMonth() < startWorkingDate.getMonth()) yearsOfExperience--;

	const mainTitle = 'Raul Ramos Pinto'
	let title
	const mainDescription = `${mainTitle} is a UX/UI Designer and Front-End Developer with ${yearsOfExperience} years of experience and a very strong concern for web accessibility.`
	let pageDescription
	const mainKeywords = 'UX, UI, Design, User Experience, User Interface, Designer, Digital, Frontend, Developer, Development, Web, Accessibility, A11y, HTML, CSS, JavaScript, Figma'
	let pageKeywords



