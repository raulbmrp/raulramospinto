mixin figure(options)
	figure.figure(class=setModifiers(options.modifiers, 'figure--'))&attributes(attributes)
		picture.picture

			-
				const path = '../assets/images/';
				const desktopExtension = ['-desktop@1x.webp', '-desktop@1x.', '-desktop@2x.webp', '-desktop@2x.'];
				const tabletExtension = ['-tablet@1x.webp', '-tablet@1x.', '-tablet@2x.webp', '-tablet@2x.'];
				const mobileExtension = ['-mobile@1x.webp', '-mobile@1x.', '-mobile@2x.webp', '-mobile@2x.'];

			source(media='(min-width: 992px)' srcset=`${path + options.file + '/' + options.name + desktopExtension[0] + ' ' + options.widthDesktopX1 + 'w' + ', ' + path + options.file + '/' + options.name + desktopExtension[1] + options.format + ' ' + options.widthDesktopX1 + 'w' + ', ' + path + options.file + '/' + options.name + desktopExtension[2] + ' ' + options.widthDesktopX2 + 'w' + ', ' + path + options.file + '/' + options.name + desktopExtension[3] + options.format + ' ' + options.widthDesktopX2 + 'w'}` sizes=`${options.sizesDesktop + 'vw'}`)

			source(media='(min-width: 480px)' srcset=`${path + options.file + '/' + options.name + tabletExtension[0] + ' ' + options.widthTabletX1 + 'w' + ', ' + path + options.file + '/' + options.name + tabletExtension[1] + options.format + ' ' + options.widthTabletX1 + 'w' + ', ' + path + options.file + '/' + options.name + tabletExtension[2] + ' ' + options.widthTabletX2 + 'w' + ', ' + path + options.file + '/' + options.name + tabletExtension[3] + options.format + ' ' + options.widthTabletX2 + 'w'}` sizes=`${options.sizesTablet + 'vw'}`)

			source(srcset=`${path + options.file + '/' + options.name + mobileExtension[0] + ' ' + options.widthMobileX1 + 'w' + ', ' + path + options.file + '/' + options.name + mobileExtension[1] + options.format + ' ' + options.widthMobileX1 + 'w' + ', ' + path + options.file + '/' + options.name + mobileExtension[2] + ' ' + options.widthMobileX2 + 'w' + ', ' + path + options.file + '/' + options.name + mobileExtension[3] + options.format + ' ' + options.widthMobileX2 + 'w'}` sizes=`${options.sizesMobile + 'vw'}`)
			img(
				src=path + options.file + '/' + options.name + mobileExtension[1] + options.format
				alt=(options.alt || '')
				loading=(options.loading ? 'lazy' : null)
				title=options.title
			)

		if options.figcaption
			figcaption.figure__caption
				| !{options.figcaption}
