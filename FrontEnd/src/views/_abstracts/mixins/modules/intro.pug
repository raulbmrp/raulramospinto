mixin intro(options)

	section.module.intro(class=setModifiers(options.modifiers, 'intro--'))&attributes(attributes)

		if sectionHeading
			+heading({
				htmlTag: 'h2',
				text: `${sectionHeading}`
			})(class='sr-only')

		.intro__layout
			+heading({
				htmlTag: options.htmlTag,
				text: options.text,
				textModifiers: options.textModifiers
			}).intro__heading

			if block
				.intro__description
					block
