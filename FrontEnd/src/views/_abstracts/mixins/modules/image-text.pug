mixin image-text(options)

	section.module.image-text(class=setModifiers(options.modifiers, 'image-text--'))&attributes(attributes)
		.image-text__layout
			article.image-text__content

				+heading({
					htmlTag: options.htmlTag,
					text: options.text,
					textModifiers: options.textModifiers
				}).image-text__heading

				if options.description
					.image-text__description
						block description

				if options.buttons
					.image-text__buttons
						each button in options.buttons
							+button({
								text: button.text,
								modifiers: button.modifiers,
								url: button.url,
								target: button.target,
								urlLang: button.urlLang,
								title: button.title,
								iconFile: button.iconFile,
								iconId: button.iconId
							}).image-text__button


				+figure-equal-images({
					file: options.file,
					name: options.name,
					alt: options.alt,
					title: options.title,
					format: options.format,
					sizesMobile: options.sizesMobile,
					sizesTablet: options.sizesTablet,
					sizesDesktop: options.sizesDesktop,
					loading: options.loading
				}).image-text__figure

				if block
					block
